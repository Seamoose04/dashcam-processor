# Example environment for the 4090 workstation worker
DASHCAM_SERVER_URL=http://localhost:8000
# Optional bearer token; leave blank if not using auth
DASHCAM_API_KEY=
# Local SSD scratch directory for in-progress work
DASHCAM_SCRATCH_ROOT=workhorse/data
# Indoor NAS mount root
DASHCAM_NAS_MOUNT=/mnt/indoor_nas
# Where finalized heavy outputs are stored; defaults to <NAS>/videos/heavy_output when unset
DASHCAM_HEAVY_OUTPUT_ROOT=
# Directory containing YOLO weights
DASHCAM_MODELS_DIR=models
# Seconds between polls when idle
DASHCAM_POLL_INTERVAL=10
# Sample every Nth frame for YOLO
DASHCAM_FRAME_SAMPLE_RATE=10
# Cap on sampled frames per video
DASHCAM_MAX_FRAMES=300
# Toggle OCR (true/false)
DASHCAM_ENABLE_OCR=true
# Keep scratch artifacts after successful runs (true/false)
DASHCAM_RETAIN_RUNS=false
